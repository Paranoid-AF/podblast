{
  "name": "podchat",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "electron-is-dev": "^1.2.0"
  },
  "build": {
    "files": [
      "./build",
      "./build-electron"
    ],
    "extends": null
  },
  "main": "./build-electron/index.js",
  "scripts": {
    "start:view": "craco start",
    "start:core": "npm run build:core -s && electron ./build-electron",
    "start": "concurrently \"BROWSER=none yarn start:view\" \"wait-on http://localhost:3000 && electron .",
    "build:view": "craco build",
    "build:core": "rimraf ./build-electron/* && tsc --p tsconfig-electron.json",
    "build": "npm run build:view -s && npm run build:core -s && rimraf ./dist/* && electron-builder",
    "test:view": "craco test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": ".",
  "devDependencies": {
    "@craco/craco": "^5.7.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "antd": "^4.7.2",
    "concurrently": "^5.3.0",
    "craco-less": "^1.17.0",
    "electron": "^10.1.4",
    "electron-builder": "^22.9.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "3.4.4",
    "rimraf": "^3.0.2",
    "typescript": "~3.7.2",
    "wait-on": "^5.2.0"
  }
}
